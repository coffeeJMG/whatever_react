{
    "extends": ["airbnb-base", "plugin:prettier/recommended", "prettier"],
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/extensions": [".js", ".jsx"]
    },
    "rules": {
      "rules": { "indent": ["error", 2],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": true,
          "tabWidth": 2,
          "trailingComma": "es5"
        }
      ],
  "no-unused-vars": ["warn", { "vars": "local", "args": "none" }]},
      "no-console": "off",
      "import/no-extraneous-dependencies": ["error", {
        "devDependencies": [
          "**/*.config.js",
          "vite.config.js"
        ]
      }]
    }
  }
